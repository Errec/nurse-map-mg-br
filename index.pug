<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
    meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1")
    title
    meta(name="description" content="")
    link(rel="stylesheet" href="css/main.min.css")
    //[if lt IE 9]> <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script><script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script> <![endif]

  body
    main.main
      section.map
        div.map__legend
          div.map__btn-wrapper
            button#macro-btn.map__btn.map__btn-macro Meso
            button#micro-btn.map__btn.map__btn-micro Micro
          ul.map__legend-grid
            li.map__legend--item
              p.map__legend-text Profissionais<br>de Enfermagem
            li.map__legend--item
              div.map__legend-square#legend-1
              p.map__legend-text 0-1000
            li.map__legend--item
              div.map__legend-square#legend-2
              p.map__legend-text 1001-2000
            li.map__legend--item
              div.map__legend-square#legend-3
              p.map__legend-text 2001-3000
            li.map__legend--item
              div.map__legend-square#legend-4
              p.map__legend-text 3001-4000
            li.map__legend--item
              div.map__legend-square#legend-5
              p.map__legend-text 4001-10000
            li.map__legend--item
              div.map__legend-square#legend-6
              p.map__legend-text 10000<
        div.map__svg
          include templates/map.pug
        div.map__subtitle
          p.map__legend-text Mapa da distribuição dos profissonais de Enfermagem no estado de Minas Gerais
      section.data
        div.data__graph-wrapper
          div.data__graph-title
            h2#region-title Região
          canvas.data__graph#canvas
        div.data__table-wrapper
          table.data__table#table
            tr.data__table-row
              td.data__table-data#td-prof Total na Região
              td.data__table-data.data__table-data-values#td-prof-n 0
              td.data__table-data.data__table-data-values#td-prof-p 0%
            tr.data__table-row
              td.data__table-data#td-enf Enfermeiros
              td.data__table-data.data__table-data-values#td-enf-n 0
              td.data__table-data.data__table-data-values#td-enf-p 0%
            tr.data__table-row
              td.data__table-data#td-tec Técnicos de Enfermagem
              td.data__table-data.data__table-data-values#td-tec-n 0
              td.data__table-data.data__table-data-values#td-tec-p 0%
            tr.data__table-row
              td.data__table-data#td-aux Auxiliares de Enfermagem
              td.data__table-data.data__table-data-values#td-aux-n 0
              td.data__table-data.data__table-data-values#td-aux-p 0%

  script(src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.6.0/Chart.bundle.min.js")
  script(src="js/bundle.min.js")
